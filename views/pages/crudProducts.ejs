<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <!-- header -->
    <%- include('../partials/header') %>

        <!--main -->
        <div class="container mt-3">
            <h1><strong>Listado de Products</strong></h1>
            <br>
            <% const hayProducts=productsList.length> 0; %>
                <div class="table-responsive">
                    <% if(hayProducts){ %>
                        <table class="table table-bordered tablaCRUD">
                            <thead>
                                <tr>
                                    <th>Id Product</th>
                                    <th>Nombre</th>
                                    <th>Descripci√≥n</th>
                                    <th>Precio</th>
                                    <th>Stock</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (const item of productsList) {%>
                                    <tr>
                                        <td id="idProduct">
                                            <%= item.id %>
                                        </td>
                                        <td>
                                            <%= item.nombre %>
                                        </td>
                                        <td>
                                            <%= item.descripcion %>
                                        </td>
                                        <td>
                                            <%= item.precio %>
                                        </td>
                                        <td>
                                            <%= item.stock %>
                                        </td>
                                        <td>
                                            &nbsp;&nbsp;<a href='/product/borrar/<%= item.id %>'>borrar</a>
                                        </td>
                                    </tr>
                                    <%};%>
                            </tbody>
                        </table>
                        <% } else{ %>
                            <h3 class="alert alert-danger">No hay products dados de alta</h1>
                                <% } %>
                </div>
                <br>
        </div>

</body>


</html>